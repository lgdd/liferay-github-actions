{
  "kind": "Deployment",
  "id": "backup",
  "image": "liferaycloud/backup:5.0.0",
  "memory": 1024,
  "cpu": 2,
  "scale": 1,
  "loadBalancer": {
    "targetPort": 3000
  },
  "readinessProbe": {
    "httpGet": {
      "path": "/",
      "port": 3000
    },
    "initialDelaySeconds": 10,
    "timeoutSeconds": 60,
    "failureThreshold": 5,
    "periodSeconds": 30
  },
  "livenessProbe": {
    "httpGet": {
      "path": "/",
      "port": 3000
    },
    "initialDelaySeconds": 120,
    "timeoutSeconds": 60,
    "failureThreshold": 5,
    "periodSeconds": 60
  },
  "env": {
    "LCP_BACKUP_CREATE_SCHEDULE": "0 1 * * *",
    "LCP_BACKUP_RESTORE_SCHEDULE": "",
    "LCP_GCP_DATABASE_CHARSET": "utf8mb4",
    "LCP_GCP_DATABASE_COLLATION": "utf8mb4_unicode_ci"
  },
  "dependencies": ["database", "liferay"],
  "environments": {
    "infra": {
      "deploy": false
    }
  }
}
